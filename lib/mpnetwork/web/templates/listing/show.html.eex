</ul>

<%= if @listing.user_id == @current_user.id do %>
  <span><%= link "Edit this listing", to: listing_path(@conn, :edit, @listing), class: "btn btn-default btn-xl" %></span>
<% end %>
&nbsp;&nbsp;
<span><%= link "Back to all listings", to: listing_path(@conn, :index) %></span>
